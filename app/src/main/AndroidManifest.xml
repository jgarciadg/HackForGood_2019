<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.hackforgood.hackforgood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="YayoCar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".ui.navigation_drawer.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.search_travel.SearchTravelActivity"
            android:label="Buscar viaje"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.public_ad.PublicAdActivity"
            android:label="Publicar viaje"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.see_profile.SeeProfileActivity"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.see_own_ads.SeeOwnAdsActivity"
            android:label="Mis viajes"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.see_ads_nearest.SeeAdsNearestActivity"
            android:label="Viajes Recomendados"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.see_requests.SeeRequestsActivity"
            android:label="Solicitudes"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ad_detail.AdDetailActivity"
            android:label="Anuncio"
            android:parentActivityName=".ui.navigation_drawer.NavigationDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>